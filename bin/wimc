#!/bin/bash

# ATT: https://gitlab.com/Harmelodic/dots/-/blob/master/utils/wimc @2021-29-05

# Outputs config for common development tools
# Stands for: What is my config?

{
    which dig &> /dev/null && {
        echo "External IP"
        echo "------------------------------------"
        dig +short myip.opendns.com @resolver1.opendns.com
    } |& prepend 0 &

    which git &> /dev/null && {
        echo ""
        echo ""
        echo "git"
        echo "------------------------------------"
        git config --list | grep -v alias
    } |& prepend 1 &

    which gcloud &> /dev/null && {
        echo ""
        echo ""
        echo "gcloud"
        echo "------------------------------------"
        gcloud config list
    } |& prepend 2 &

    which aws &> /dev/null && {
        echo ""
        echo ""
        echo "aws"
        echo "------------------------------------"
        aws configure list
    } |& prepend 3 &

    which kubectl &> /dev/null && {
        echo ""
        echo ""
        echo "kubectl"
        echo "------------------------------------"
        kubectl config current-context
    } |& prepend 4 &

    which doctl &> /dev/null && {
        echo ""
        echo ""
        echo "doctl"
        echo "------------------------------------"
        doctl account get
        echo ""
    } |& prepend 5 &

    for job in `jobs -p`; do
        wait $job
    done
} 2>/dev/null | sort -k1.1,1.1 -s | sed 's/^..//'
